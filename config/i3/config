exec --no-startup-id eval $(ssh-agent -s)
exec --no-startup-id ssh-add ~/.ssh/id_rsa
exec --no-startup-id ssh-add ~/.ssh/id_ed25519

### Variables
#
# Logo key. Use Mod1 for Alt.
# Logo key. Use Mod4 for WinKey.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
